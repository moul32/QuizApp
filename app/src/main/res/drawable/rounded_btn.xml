<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff2323" />
            <gradient android:angle="-90" android:startColor="#D32F2F" android:endColor="#ff6868"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D32F2F" />
            <solid android:color="#ef0909"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D32F2F" />
            <gradient android:angle="-90" android:startColor="#ff4242" android:endColor="#db0606" />
        </shape>
    </item>
</selector>